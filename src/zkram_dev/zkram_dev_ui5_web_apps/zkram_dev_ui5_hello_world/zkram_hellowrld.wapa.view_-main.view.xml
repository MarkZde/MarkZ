<mvc:View controllerName="com.zkram.helloworld.controller.Main"                                                                                                                                                                                                
          xmlns="sap.m"                                                                                                                                                                                                                                        
          xmlns:mvc="sap.ui.core.mvc"                                                                                                                                                                                                                          
          xmlns:l="sap.ui.layout"                                                                                                                                                                                                                              
          displayBlock="true">                                                                                                                                                                                                                                 
	<Shell id="shell">                                                                                                                                                                                                                                            
		<App id="app">                                                                                                                                                                                                                                               
			<pages>                                                                                                                                                                                                                                                     
				<Page id="page" title="{i18n>title}">                                                                                                                                                                                                                      
					<content>                                                                                                                                                                                                                                                 
                        <FlexBox alignItems="Center" justifyContent="Center">                                                                                                                                                                                  
                            <items>                                                                                                                                                                                                                            
                                <FormattedText htmlText="{i18n>appDescription}"                                                                                                                                                                                
                                               class="sapUiSmallMargin" />                                                                                                                                                                                     
                            </items>                                                                                                                                                                                                                           
                        </FlexBox>                                                                                                                                                                                                                             
                        <Toolbar width="100%" height="3px"/>                                                                                                                                                                                                   
                        <Toolbar width="100%" height="3px"/>                                                                                                                                                                                                   
                                                                                                                                                                                                                                                               
                        <FlexBox alignItems="Center" justifyContent="Center">                                                                                                                                                                                  
                            <items>                                                                                                                                                                                                                            
                                <FormattedText htmlText="{i18n>textHelloWorld}"                                                                                                                                                                                
                                               class="sapUiSmallMargin" />                                                                                                                                                                                     
                            </items>                                                                                                                                                                                                                           
                        </FlexBox>                                                                                                                                                                                                                             
                        <Toolbar width="100%" height="3px"/>                                                                                                                                                                                                   
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;                                                                                                               
                    </content>                                                                                                                                                                                                                                 
				</Page>                                                                                                                                                                                                                                                    
			</pages>                                                                                                                                                                                                                                                    
		</App>                                                                                                                                                                                                                                                       
	</Shell>                                                                                                                                                                                                                                                      
</mvc:View>                                                                                                                                                                                                                                                    
                                                                                                                                                                                                                                                               